{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Source ROS",
      "type": "shell",
      "command": ". /opt/ros/kilted/setup.sh",
      "dependsOrder": "sequence",
      "group": "build"
    },
    {
      "label": "Colcon Build",
      "type": "shell",
      "command": "colcon build --merge-install --packages-select interaction_stars_ros_converter --cmake-args -DCMAKE_BUILD_TYPE=RelWithDebInfo",
      "dependsOrder": "sequence",
      "dependsOn": [
        "Source ROS"
      ],
      "group": "build"
    },
    {
      "label": "Build And Run",
      "type": "shell",
      "dependsOrder": "sequence",
      "dependsOn": [
        "Colcon Build"
      ],
      "command": ". /opt/ros/kilted/setup.sh && COLCON_CURRENT_PREFIX=./install . ./install/setup.sh && ros2 run stars_ros_exporter stars_ros_exporter",
      "group": "build"
    }
  ]
}
